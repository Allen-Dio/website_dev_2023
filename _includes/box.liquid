{%- if include.data -%}
    {% assign data = page[include.data] %}
{% else %}
    {% assign data = page.story %}
{% endif %}

{%- if data.class -%}
    {% assign class = data.class | prepend: ' ' %}
{% else %}
    {% assign class = "" %}
{% endif %}

<section class="box{{ class }}">
    <div class="row justify-content-md-center text-center">
        <div class="col col-12 col-lg-6 col-xl-7 col-xxl-6">
            {%- if data.title -%}<h4 class="box__title">{{ data.title }}</h4>{% endif %}
            {%- if data.heading -%}<h2 class="box__heading">{{ data.heading }}</h2>{% endif %}
        </div>
    </div>
    <div class="row justify-content-md-center text-center">
        {%- if data.content -%}
            <div class="col col-12 col-md-8 col-lg-7">
                <div class="box__content">{{ data.content | markdownify }}</div>
            </div>
        {% endif %}
        {%- if data.blockquote -%}
            <div class="col col-12 col-md-8 col-lg-7">
                <div class="box__content">
                    <figure>
                        <blockquote><p>{{ data.blockquote }}</p></blockquote>
                        {%- if data.caption -%}<figcaption>{{ data.caption }}</figcaption>{% endif %}
                    </figure>
                </div>
            </div>
        {% endif %}
        {%- if data.solutions -%}
            {% for solution in data.solutions %}
                <div class="col col-12 col-md-4">
                    <section class="box__solution">
                        {%- if forloop.index <= 4 -%}
                            {%- if solution.title -%}<h3>{{ solution.title }}</h3>{% endif %}
                            {%- if solution.content -%}<p>{{ solution.content }}</p>{% endif %}
                            {%- if solution.button -%}<a href="{{ solution.button.url }}" class="btn {{ solution.button.class }}">{{ solution.button.label }}</a>{% endif %}
                        {% endif %}
                    </section>
                </div>
            {% endfor %}
        {% endif %}
    </div>
</section>